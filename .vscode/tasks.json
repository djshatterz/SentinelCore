{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": ".\\gradlew.bat build",
			"problemMatcher": [
				"$gradle"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"focus": false
			}
		},
		{
			"label": "Clean Build",
			"type": "shell",
			"command": ".\\gradlew.bat clean build",
			"problemMatcher": [
				"$gradle"
			],
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "Spotless Apply",
			"type": "shell",
			"command": ".\\gradlew.bat spotlessApply",
			"problemMatcher": [
				"$gradle"
			],
			"group": "build",
			"presentation": {
				"reveal": "silent",
				"panel": "shared"
			}
		},
		{
			"label": "Spotless Check",
			"type": "shell",
			"command": ".\\gradlew.bat spotlessCheck",
			"problemMatcher": [
				"$gradle"
			],
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "Run Server",
			"type": "shell",
			"command": ".\\gradlew.bat runServer",
			"problemMatcher": [],
			"isBackground": true,
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"focus": true
			}
		},
		{
			"label": "Run Client",
			"type": "shell",
			"command": ".\\gradlew.bat runClient",
			"problemMatcher": [],
			"isBackground": true,
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"focus": true
			}
		},
		{
			"label": "Clean",
			"type": "shell",
			"command": ".\\gradlew.bat clean",
			"problemMatcher": [
				"$gradle"
			],
			"group": "build",
			"presentation": {
				"reveal": "silent",
				"panel": "shared"
			}
		},
		{
			"label": "Generate Sources",
			"type": "shell",
			"command": ".\\gradlew.bat genSources",
			"problemMatcher": [
				"$gradle"
			],
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "Test",
			"type": "shell",
			"command": ".\\gradlew.bat test",
			"problemMatcher": [
				"$gradle"
			],
			"group": {
				"kind": "test",
				"isDefault": false
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		}
	]
}